pipeline {
    agent any

    stages {
        stage('Test') {
            steps {
                nodejs('node-22') {                    sh '''
                    cd app
                    npm ci
                    npm test
                    '''
                }
            }
        }

        stage('Docker Test'){
            steps{
                docker('Docker'){
                    sh '''
                    cd app 
                    docker-compose build
                    docker-compose up
                    '''
                }
            }
        }
    }    
}